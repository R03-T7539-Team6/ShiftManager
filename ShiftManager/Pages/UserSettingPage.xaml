<Page x:Class="ShiftManager.Pages.UserSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:MyCtrls="clr-namespace:ShiftManager.Controls"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserSettingPage">

  <Grid>
    <MyCtrls:UserSettingControl
      x:Name="usc"
      SavePushed="usc_SavePushed"
      CanEditNotificationSetting="False"
      CanEditPassword="True"
      CanEditUserGroup="True"
      CanEditUserID="False"
      CanEditUserName="True"
      CanEditUserState="True"
      CanPrintSettings="False"
      CanSaveSettings="True"/>
  </Grid>
</Page>
