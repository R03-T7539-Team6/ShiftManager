<Page
  x:Class="ShiftManager.Pages.HomePage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:ShiftManager.Pages"
  xmlns:ctrls="clr-namespace:ShiftManager.Controls"
  mc:Ignorable="d" 
  d:DesignHeight="450" d:DesignWidth="800"
  Title="HomePage">

  <Grid
    Background="White"
    Margin="50">

    <TextBox
      HorizontalAlignment="Center"
      VerticalAlignment="Top"
      Margin="50"
      Text="{Binding ElementName=SEBC, Path=Width, Mode=TwoWay}"/>

    <Border
      HorizontalAlignment="Stretch"
      VerticalAlignment="Center"
      BorderThickness="2"
      BorderBrush="Aqua">
      <ScrollViewer
        VerticalScrollBarVisibility="Hidden"
        HorizontalScrollBarVisibility="Auto">
        <ctrls:ShiftEditorBarControl
          x:Name="SEBC"
        Margin="2"
        Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ScrollViewer}, Path=ActualWidth}"
        Height="30"/>
      </ScrollViewer>
        
    </Border>
  </Grid>
</Page>
